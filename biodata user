    <script>
window.addEventListener("load", function() {
    const username = localStorage.getItem("username");
    const useremail = localStorage.getItem("useremail");
    const useragama = localStorage.getItem("useragama");
    const useralamat = localStorage.getItem("useralamat");
    const userdeskripsi = localStorage.getItem("userdeskripsi");

    if (username) document.querySelector("#username").textContent = username;
    if (useremail) document.querySelector("#useremail").textContent = useremail;
    if (useragama) document.querySelector("#useragama").textContent = useragama;
    if (useralamat) document.querySelector("#useralamat").textContent = useralamat;
    if (userdeskripsi) document.querySelector("#userdeskripsi").textContent = userdeskripsi;
    });
    </script>
